<script>
  $( function() {
    // Make table sortable. Initialize default sort to
    // [ leftmost column, descending ]. Prevent meaningless attempts
    // to sort by "Actions" column (currently in position 3).
    $( "#gameTable" ).tablesorter({
      sortList: [[0,1]],
      headers: {
        3: { sorter: false }
      }
    });
  });
</script>

<script>
  $( function() {
    $( "#topicTable" ).tablesorter({
      sortList: [[0,0]]
    });
  });
</script>
