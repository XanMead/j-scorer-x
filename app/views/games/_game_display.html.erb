<div id="game-container">

  <div id="board-area">

    <div id="board">
      <% 1.upto(6) do |cat_num| %>
        <div class="category" id="category-<%= cat_num %>">

          <div class="cat-title" id="cat-title-<%= cat_num %>">
            <p contenteditable="true"
               class="default-cat click-resistant"
               tabindex=1
               data-defaultvalue="CATEGORY <%= cat_num %>"
               data-column=<%= cat_num %>
               spellcheck="false">
               .
            </p>
          </div>

          <input class="topic-area" id="topic-area-<%= cat_num %>"
                                    placeholder="Topic(s)"
                                    tabindex=2
                                    data-column=<%= cat_num %> />

          <% 1.upto(5) do |box_num| %>
            <div class="clue-box active-clue-box"
                 id="clue-box-<%= cat_num %>-<%= box_num %>"
                 data-column=<%= cat_num %>
                 data-row=<%= box_num %>
                 data-isdd=false
                 data-boxstate="active">
              <span>.</span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div id="clue-over-board">
      <div id="clue-heading">
        <span id="overlay-cat">{Category}</span>
        &nbsp;-&nbsp;
        <span id="overlay-value">{Value}</span>
      </div>

      <div id="clue-body">
        <div id="correctness-buttons">
          <button type="button" id="button-right">Right</button>
          <button type="button" id="button-pass">Pass</button>
          <button type="button" id="button-wrong">Wrong</button>
        </div>

        <div id="dd-nr-cancel">
          <div id="dd-checkbox-container">
            <label for="dd-checkbox">DD&nbsp;</label>
            <input type="checkbox" id="dd-checkbox" value="DD" />
          </div>
          <div id="button-nr">
            <button type="button">NR</button>
          </div>
          <div id="reset-cancel">
            <a id="reset-link">Reset clue</a>
            <a id="cancel-link">Cancel</a>
          </div>
        </div>
      </div>
    </div>

    <div id="final-over-board">
      <div id="final-cat-title">
        <p contenteditable="true"
           class="final-cat default-cat click-resistant"
           tabindex=1
           data-defaultvalue="FINAL CATEGORY"
           spellcheck="false">
        .
        </p>
      </div>

      <input id="final-topic-area" placeholder="Topic(s)" tabindex=2 />

      <div id="final-clue-body">
        <div id="final-correctness-buttons">
          <button type="button"
                  id="button-final-right"
                  tabindex=3>
            Right
          </button>
          <button type="button"
                  id="button-final-wrong"
                  tabindex=3>
            Wrong
          </button>
        </div>

        <div id="final-contestant-results">
          <div class="contestant-result" id="third-result">
            Third place:
            <div class="btn-group" data-toggle="buttons">
              <label id="p3right" class="btn btn-default fj-button">
                <input type="radio" name="third_right" value=true /> Right
              </label>
              <label id="p3wrong" class="btn btn-default fj-button">
                <input type="radio" name="third_right" value=false /> Wrong
              </label>
              <label id="p3dnp" class="btn btn-default fj-button">
                <input type="radio" name="third_right" value=null /> N/A
              </label>
            </div>
          </div>

          <div class="contestant-result" id="second-result">
            Second place:
            <div class="btn-group" data-toggle="buttons">
              <label id="p2right" class="btn btn-default fj-button">
                <input type="radio" name="second_right" value=true /> Right
              </label>
              <label id="p2wrong" class="btn btn-default fj-button">
                <input type="radio" name="second_right" value=false /> Wrong
              </label>
              <label id="p2dnp" class="btn btn-default fj-button">
                <input type="radio" name="second_right" value=null /> N/A
              </label>
            </div>
          </div>

          <div class="contestant-result" id="first-result">
            First place:
            <div class="btn-group" data-toggle="buttons">
              <label id="p1right" class="btn btn-default fj-button">
                <input type="radio" name="first_right" value=true /> Right
              </label>
              <label id="p1wrong" class="btn btn-default fj-button">
                <input type="radio" name="first_right" value=false /> Wrong
              </label>
              <label id="p1dnp" class="btn btn-default fj-button">
                <input type="radio" name="first_right" value=null /> N/A
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="panel">
    <div id="scoreboard">
      Score
      <div>
        <span id="score">$...</span>
        <span id="final-symbol"></span>
      </div>
    </div>

    <div id="round-links">
      <div id="r1slot"><a id="round-one-link" tabindex=100>Round One</a></div>
      <div id="r2slot"><a id="round-two-link" tabindex=100>Round Two</a></div>
      <div id="fjslot"><a id="final-round-link" tabindex=100>Final Round</a></div>
    </div>

    <div id="save-area">

      <div class="row">
        <div class="col-xs-6 col-compact">
          Show date:
        </div>
        <div class="col-xs-6 col-compact text-right">
          <span id="show-date-change">(<a>change</a>)</span>
        </div>
      </div>

      <div id="show-date-area" class="">
        <div class="row">
          <div class='col-xs-12 col-compact'>
            <div class="form-group">
              <div class='input-group date' id='show-date-picker'>
                <input type='text'
                       class="form-control"
                       tabindex=200
                       spellcheck="false" />
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4 col-compact">
          Played at:
        </div>
        <div class="col-xs-8 col-compact text-right">
          <span id="time-zone">(Time zone: Pacific)</span>
        </div>
      </div>

      <div id="played-at-area">
        <div class="row">
          <div class='col-xs-12 col-compact'>
            <div class="form-group">
              <div class='input-group date' id='played-picker'>
                <input type='text'
                       class="form-control"
                       tabindex=200
                       spellcheck="false" />
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      Play type:
      <select id="play-type-select" tabindex=200>
        <option value="regular">regular play</option>
        <option value="power">Power Players Week</option>
        <option value="teachers">Teachers Tournament</option>
        <option value="college">College Championship</option>
        <option value="toc">Tournament of Champions</option>
        <option value="celebrity">Celebrity</option>
        <option value="kids">Kids Week / Back to School Week</option>
        <option value="teen">Teen Tournament</option>
        <option value="decades">Battle of the Decades</option>
        <option value="ibm">The IBM Challenge</option>
        <option value="mdci">Million Dollar Celebrity Invitational</option>
        <option value="kids-reunion">Kids Week Reunion</option>
        <option value="utoc">Ultimate Tournament of Champions</option>
        <option value="mdm">Million Dollar Masters</option>
        <option value="intl">International / Olympic</option>
        <option value="armed">Armed Forces Week</option>
        <option value="teen-reunion">Teen Reunion Tournament</option>
        <option value="senior">Seniors Tournament</option>
        <option value="tenth">Tenth-Anniversary Tournament</option>
        <option value="super">Super Jeopardy!</option>
        <option value="rock">Rock &amp; Roll Jeopardy!</option>
        <option value="sports">Sports Jeopardy!</option>
        <option value="other">other</option>
      </select>

      <div class="text-center">
        <% if current_user %>
          <a id="save-link" tabindex=300 data-disabled="false">Save game</a>
        <% else %>
          <%= link_to 'Log in', login_path, tabindex: 300 %> to save game
        <% end %>
      </div>
    </div>


    <div id="panel-links">
      <a id="delete-game-link" tabindex=400>New game</a>
    </div>
  </div>
</div>
