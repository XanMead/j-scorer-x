<% provide(:title, 'Reset password') %>

<br />
<h1>Reset password</h1>
<br />

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(@user, url: reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, 'Choose a new password' %>
      <%= f.password_field :password, class: 'form-control', tabindex: 1 %>

      <%= f.label :password_confirmation, 'Confirm new password' %>
      <%= f.password_field :password_confirmation, class: 'form-control',
                                                   tabindex: 2 %>
      <br />

      <%= f.submit "Update password", class: 'btn btn-primary submit-button',
                                      data: { disable_with: 'Updating...' },
                                      tabindex: 3 %>
    <% end %>
  </div>
</div>
